<div class="container">
  <div class="font-color my-5">
    <h1><%= @list.name %></h1>
    <h2><%= @list.description %></h2>
  </div>

  <div class="cards mb-5 mt-3">
    <% @list.catalogs.each do |catalog| %>
      <div class="card-folder">
        <img src="<%= catalog.video.image_url %>"/>
        <div class="card-folder-infos">
          <div class="card-music-title">
            <a href="<%= video_path(catalog.video.youtube_key) %>">
              <h2><%= catalog.video.title %></h2>
            </a>
          </div>
          <% if @user == current_user %>
            <%= link_to "", catalog_path(catalog), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user == @list.user %>
    <%= link_to "Edit List", edit_list_path, class: "btn color-btn rounded-btn-nav m-2" %>
    <%= link_to "Delete",
    list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-dark rounded-btn-nav m-2" %>
  <% end %>

<%= link_to  '<i class="fa-solid fa-arrow-left"></i>'.html_safe, user_path(@user), class:'arrow arrow-top'%>
</div>
